          curve: Curve.EaseOut,
          onFinish: () => {
            animateTo({ duration: 200, curve: Curve.EaseInOut }, () => {
              this.star3Scale = 0.85;
            });
            setTimeout(() => {
              animateTo({ duration: 200, curve: Curve.EaseInOut }, () => {
                this.star3Scale = 1;
              });
            }, 200);
          }
        }, () => {
          this.star3Scale = 1.3;
        });
      }, 900);
    }
  }

